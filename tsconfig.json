{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist/mjs",
    "target": "es2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "noUnusedParameters": true,
    "sourceMap": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist", "coverage", "bin"],
  "include": ["src"]
}
